local imgui = require("imgui") 

local drag = false
local drag_offset = Vector2.new(0, 0)

imgui.ShowDemoWindow()

imgui.Begin("Draggable Window")

if imgui.IsWindowHovered() and imgui.IsMouseClicked(0) then
  drag = true
  drag_offset = Vector2.new(imgui.GetMousePos()) - Vector2.new(imgui.GetWindowPos())
end

if drag then
  imgui.SetWindowPos(Vector2.new(imgui.GetMousePos()) - drag_offset) 
end

if not imgui.IsMouseDown(0) then
  drag = false
end

imgui.Text("This window is draggable!")
imgui.End()

imgui.Render()
